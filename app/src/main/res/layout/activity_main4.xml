<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:orientation="horizontal"
    android:id="@+id/activity_main4"
    tools:context=".Main4Activity">

    <FrameLayout
        android:id="@+id/logo_deliv"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="520dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/deliv" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="110dp"
            android:id="@+id/txt_viewnama"
            android:text="NAMA"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/txt_viewalamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:text="ALAMAT"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/txt_viewpesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="190dp"
            android:text="PESANAN"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25dp" />
    </FrameLayout>
    <Button
        android:id="@+id/button_cancel"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:textSize="20dp"
        android:text="CANCEL"
        android:background="#ED474A"
        android:textColor="#ffff"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_deliv"/>


</androidx.constraintlayout.widget.ConstraintLayout>